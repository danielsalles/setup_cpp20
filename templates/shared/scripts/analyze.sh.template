            HEADER_FILTER="$2"
            shift 2
            ;;
        --warnings-as-errors)
            WARNINGS_AS_ERRORS=true
            shift
            ;;
        --fix)
            FIX_MODE=true
            shift
            ;;
        --fix-errors)
            FIX_ERRORS=true
            shift
            ;;
        --config)
            CONFIG_FILE="$2"
            shift 2
            ;;
        --create-config)
            CREATE_CONFIG=true
            shift
            ;;
        --compile-commands)
            COMPILE_COMMANDS_FILE="$2"
            shift 2
            ;;
        --build-type)
            BUILD_TYPE="$2"
            shift 2
            ;;
        --cmake-args)
            CUSTOM_CMAKE_ARGS="$2"
            shift 2
            ;;
        --format)
            REPORT_FORMAT="$2"
            shift 2
            ;;
        --output-dir)
            OUTPUT_DIR="$2"
            shift 2
            ;;
        --no-report)
            NO_REPORT=true
            shift
            ;;
        --incremental)
            INCREMENTAL=true
            shift
            ;;
        --severity)
            SEVERITY="$2"
            shift 2
            ;;
        --exclude-paths)
            EXCLUDE_PATHS="$2"
            shift 2
            ;;
        -n|--dry-run)
            DRY_RUN=true
            shift
            ;;
        -v|--verbose)
            VERBOSE=true
            shift
